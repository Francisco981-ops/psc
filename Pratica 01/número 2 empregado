import javax.swing.JOptionPane;

public class CalcularIdadeJOptionPane {
    public static void main(String[] args) {
        int anoNascimento = Integer.parseInt(JOptionPane.showInputDialog("Digite o ano de nascimento: 2005"));
        int anoAtual = Integer.parseInt(JOptionPane.showInputDialog("Digite o ano atual: 2024"));

        int idadeAtual = anoAtual - anoNascimento;
        int idadeEm2050 = 2050 - anoNascimento;

        JOptionPane.showMessageDialog(null, "A idade atual é: 19 " + idadeAtual);
        JOptionPane.showMessageDialog(null, "A idade em 2050 será: 45 " + idadeEm2050);
    }
}
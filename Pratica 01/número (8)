import javax.swing.JOptionPane;

public class CalculoPesoJOptionPane {
    public static void main(String[] args) {
        double peso = Double.parseDouble(JOptionPane.showInputDialog("Digite o peso da pessoa:"));

        double pesoEngordar = peso * 1.15;
        double pesoEmagrecer = peso * 0.80;

        JOptionPane.showMessageDialog(null, "Se a pessoa engordar 15%, o novo peso será: " + pesoEngordar);
        JOptionPane.showMessageDialog(null, "Se a pessoa emagrecer 20%, o novo peso será: " + pesoEmagrecer);
    }
}

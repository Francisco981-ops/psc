import java.util.Scanner;
public class ExplicacaoComandosGit {
    public static main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Informe o comando Git (clone/fetch/pull): ");
        String comandoGit = sc.next();
        switch (comandoGit) {
            case "clone":
                System.out.println("git clone: Copia um repositório remoto para sua máquina.");
                System.out.println("Exemplo: git clone https://github.com/usuario/repositorio.git");
                break;
            case "fetch":
                System.out.println("git fetch: Atualiza seu repositório local com as alterações do remoto sem integrá-las.");
                System.out.println("Exemplo: git fetch origin");
                break;
            case "pull":
                System.out.println("git pull: Atualiza seu repositório local com as alterações do remoto e integra-as.");
                System.out.println("Exemplo: git pull origin main");
                break;
            default:
                System.out.println("Comando inválido");
        }

        sc.close();
    }
}
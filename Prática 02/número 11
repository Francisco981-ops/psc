import java.util.Scanner;
public class CalculoDiariasHotel {
    public static main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Informe o número de diárias: ");
        int diarias = sc.nextInt();
        double taxa = (diarias < 15) ? 15 : (diarias == 15) ? 10 : 5;
        double total = diarias * 500 + diarias * taxa;
        System.out.println("Total a ser pago: R$ " + total);
    }
}
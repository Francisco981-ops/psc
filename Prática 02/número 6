import java.util.Scanner;
public class VerificarValoresTriangulo {
    public static main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Informe o lado A: ");
        double a = sc.nextDouble();
        System.out.println("Informe o lado B: ");
        double b = sc.nextDouble();
        System.out.println("Informe o lado C: ");
        double c = sc.nextDouble();
        if ((Math.abs(b - c) < a && a < b + c) && (Math.abs(a - c) < b && b < a + c) && (Math.abs(a - b) < c && c < a + b)) {
            System.out.println("Os três valores podem formar um triângulo");
        } else {
            System.out.println("Os três valores não podem formar um triângulo");
    }
}
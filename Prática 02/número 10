import java.util.Scanner;
public class OperacoesDoisNumeros {
    public static main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Informe o primeiro número: ");
        double num1 = sc.nextDouble();
        System.out.println("Informe o segundo número: ");
        double num2 = sc.nextDouble();
        System.out.println("Escolha a operação (1-Soma, 2-Multiplica, 3-Subtrai, 4-Divide): ");
        int operacao = sc.nextInt();
        switch (operacao) {
            case 1:
            System.out.println("Resultado da soma: " + (num1 + num2));
            break;
            case 2:
            System.out.println("Resultado da multiplicação: " + (num1 * num2));
            break;
            case 3:
            System.out.println("Resultado da subtração: " + Math.abs(num1 - num2));
            break;
            case 4:
            if (num2 != 0) {
                System.out.println("Resultado da divisão: " + (num1 / num2));
            } else {
                System.out.println("Divisão por zero não permitida");
            } 
        }
        break;
      default:
          System.out.println("Operação inválida");  
    }
}
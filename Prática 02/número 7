import java.util.Scanner;
public class EquacaoDeSegundoGrau {
    public static main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Informe o valor de A: ");
        double coefA = sc.nextDouble();
        System.out.println("Informe o valor de B: ");
        double coefB = sc.nextDouble();
        System.out.println("Informe o valor de C: ");
        double coefC = sc.nextDouble();
        if (coefA == 0 && coefB == 0 && coefC == 0) {
            System.out.println("Igualdade confirmada: 0 = 0");
        } else if (coefA == 0 && coefB == 0) {
            System.out.println("Coeficientes informados incorretamente");
        } else if (coefA == 0) {
            double raiz = -coefC / coefB;
            System.out.println("Esta é uma equação de primeiro grau. Raiz: " + raiz);
        } else {
            double delta = coefB * coefB - 4 * coefA * coefC;
            if (delta < 0) {
                System.out.println("Esta equação não possui raízes reais");
            } else if (delta == 0) {
                double raizUnica = -coefB / (2 * coefA);
                System.out.println("Esta equação possui duas raízes reais iguais: " + raizUnica);
        } else {
            double raiz1 = (-coefB + Math.sqrt(delta)) / (2 * coefA);
            double raiz2 = (-coefB - Math.sqrt(delta)) / (2 * coefA);
            System.out.println("Esta equação possui duas raízes reais diferentes: Raiz 1 = " + raiz1 + ", Raiz 2 = " + raiz2);      
    }
}